<!DOCTYPE html>
<%- include ../tema/header.ejs %>
<%- include ../menu/menu.ejs %>
</div>
<div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row" id="conteudo">
                    <div class="col-md-12">
                        <!-- DATA TABLE -->
                        <h3 class="title-5 m-b-35">Usuários</h3>
                        <div class="table-data__tool">
                            <div class="table-data__tool-right">
                                <button class="au-btn au-btn-icon au-btn--green au-btn--small" type="button" id="novoDesenvolvedor">
                                    <i class="zmdi zmdi-plus"></i>Criar Novo Desenvolvedor</button>
                            </div>
                        </div>
                            <div class="table-responsive table-responsive-data2">
                                <table class="table table-data2">
                                    <thead>
                                        <tr>
                                            <th>Tipo</th>
                                            <th>Nome</th>
                                            <th>Email</th>
                                            <th>Empresa</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(var i = 0; i< usuariosDev.length; i++){ %>
                                       		<% if(usuariosDev.length > 0){ %>
                                       			<% if(usuariosDev[i].aprovado != 50){ %>
	                                                <tr class="tr-shadow">	
	                                                    <td>Desenvolvedor</td>
	                                                    <td id="nome_<%= usuariosDev[i].id_usuario %>"><%= usuariosDev[i].nome %></td>
	                                                    <td class="desc"><a href="mailto:<%= usuariosDev[i].email %>"><%= usuariosDev[i].email %></a></td>
	                                                    <td>Tiozinhos de laboratório</td>
	                                                    <td>
	                                                    	<div class="table-data-feature">
	                                                           	<button class="item" data-toggle="tooltip" data-placement="top" title="Excluir" onclick="excluirUsuarioDev(<%= usuariosDev[i].id_usuario %>)">
	                                                                <i class="fas fa-times"></i>
	                                                            </button>
	                                                      	</div>
	                                                    </td>
	                                                </tr>
	                                                <tr class="spacer"></tr>
                                        		<% } %>
                                        	<% } %>
                                    	<% } %>
                                    	<% for(var i = 0; i< usuariosClientes.length; i++){ %>
	                                    	<% if(usuariosClientes.length > 0){ %>
	                                    		<% if(usuariosClientes[i].aprovado != 50){ %>
													<tr class="tr-shadow">	
		                                                <td>Cliente</td>
		                                                <td id="nome_<%= usuariosClientes[i].id_usuario %>"><%= usuariosClientes[i].nomeUsuario %></td>
		                                                <td class="desc"><a href="mailto:<%= usuariosClientes[i].email %>"><%= usuariosClientes[i].email %></a></td>
		                                                <td><%= usuariosClientes[i].nomeCliente %></td>
		                                                <td>
		                                                   	<div class="table-data-feature">
		                                                        <button class="item" data-toggle="tooltip" data-placement="top" title="Excluir" onclick="excluirUsuarioDev(<%= usuariosClientes[i].id_usuario %>)">
		                                                            <i class="fas fa-times"></i>
		                                                        </button>
		                                                  	</div>
		                                            	</td>
		                                            </tr>
		                                            <tr class="spacer"></tr>
	                                    		<% } %>
	                                    	<% } %>
                                    	<% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="assets/js/usuarios/funcoes.js"></script>
<script src="assets/js/usuarios/usuarios.js"></script>
</body>
</html>
