<!DOCTYPE html>
<% if(projetos.length == 0){ %>
	<p>Você precisa criar um projeto para gerar serviço</p>
<% } else{ %>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">Criar novo cliente</div>
        <div class="card-body card-block">
            <form action="/criarNovoServico" method="post">
                <div class="form-group">
                    <label for="observacao" class="form-control-label">Detalhes</label>
                    <textarea name="observacao" id="observacao" rows="9" required class="form-control"></textarea>
                </div>
                <div class="form-group">
                	<label for="idProjeto" class="form-control-label">Projeto</label>
                	<select name="idProjeto" id="idProjeto" class="form-control-lg form-control">
                		<% for(var i = 0; i < projetos.length; i++){ %>
                		<% if(projetos[i].status != 50){ %>
                		<option value="<%= projetos[i].id_projeto %>"><%= projetos[i].nome %></option>
                		<% } %>
                		<% } %>
                	</select>
                </div>
                <div class="form-actions form-group">
                    <button type="submit" class="btn btn-success btn-sm">Solicitar serviço</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% } %>