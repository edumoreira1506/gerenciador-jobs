<!DOCTYPE html>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">Editar serviço</div>
        <div class="card-body card-block">
            <form action="/editarServicoFormulario" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="observacao" class="form-control-label">Detalhes</label>
                    <textarea name="observacao" id="observacao" rows="9" required class="form-control"><%= servico.observacao %></textarea>
                </div>
                <div class="form-group">
                    <label for="imagens" class="form-control-label">Imagem (Opcional)</label>
                    <input type="file" name="imagens" id="imagens" class="form-control">
                    <div id="inputs-imagens"></div>
                </div>
                <input type="hidden" name="idServico" value="<%= servico.id_servico %>">
                <div class="form-actions form-group">
                    <button type="submit" class="btn btn-success btn-sm">Editar serviço</button>
                </div>
            </form>
            <div class="form-group">
                <div class="image" id="imagens-temp">
                    
                </div>
            </div>
        </div>
    </div>
</div>